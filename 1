using System;

class MainClass {
  public static void Main (string[] args) {
            string S, S0;
            Console.Write("Введите строку, в которой необходимо произвести поиск: ");
            S = Console.ReadLine();
            Console.Write("Введите строку, поиск которой необходимо произвести: ");
            S0 = Console.ReadLine();
            int N = 0, len = S0.Length, UpIdx = S.Length - len, i;
            for (i = 0; i <= UpIdx; i++)
            {
                if (S0 == S.Substring(i, len))
                {
                    N++;
                }
            }
            Console.Write("Количество вхождений составляет: ");
            Console.WriteLine(N);
            Console.ReadKey();
  }
}
